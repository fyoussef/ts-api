generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  CLIENT
  BARBER
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  phone        String
  password     String
  role         Roles          @default(CLIENT)
  RefreshToken RefreshToken[]
  Barber       Barber[]
  Client       Client?

  @@map("user")
}

model RefreshToken {
  id         String   @id @default(uuid())
  token      String
  expiryDate DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Barber {
  id               String             @id @default(uuid())
  name             String
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id])
  Barber_Schedules Barber_Schedules[]
  Client_Schedules Client_Schedules[]

  @@map("barber")
}

model Barber_Schedules {
  hour      String @unique
  barber_id String
  Barber    Barber @relation(fields: [barber_id], references: [id])

  @@map("barber_schedules")
}

model Client_Schedules {
  id        String @id @default(uuid())
  clientId  String
  Client    Client @relation(fields: [clientId], references: [id])
  barber_id String
  Barber    Barber @relation(fields: [barber_id], references: [id])

  scheduled DateTime
}

model Client {
  id               String             @id @default(uuid())
  name             String
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id])
  Client_Schedules Client_Schedules[]

  @@map("clients")
}
