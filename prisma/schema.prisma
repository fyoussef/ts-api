generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  CLIENT
  BARBER
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  phone        String
  password     String
  role         Roles          @default(CLIENT)
  RefreshToken RefreshToken[]
  Barber       Barber[]

  @@map("user")
}

model RefreshToken {
  id         String   @id @default(uuid())
  token      String
  expiryDate DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Barber {
  id               String             @id @default(uuid())
  name             String
  userId           String
  user             User               @relation(fields: [userId], references: [id])
  Barber_Schedules Barber_Schedules[]

  @@map("barber")
}

model Barber_Schedules {
  hour      String @unique
  barber_id String
  Barber    Barber @relation(fields: [barber_id], references: [id])

  @@map("barber_schedules")
}
